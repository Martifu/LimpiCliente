<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/imagen_hogar"
            android:layout_width="180dp"
            android:layout_height="120dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tipoH"
                android:paddingLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Planchado"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/menosH"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/menos"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/cantidadH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#0E0E0E"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/masH"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/mas"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/precioH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$199"
                android:textColor="@color/theme_color2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/idH"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>