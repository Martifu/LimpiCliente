<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagen_lav"
            android:layout_width="180dp"
            android:layout_height="180dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tipoL"
                android:paddingLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Planchado"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/menosL"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/menos"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/cantidadL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#0E0E0E"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/masL"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/mas"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>


            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/precioL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$199"
                android:textColor="@color/theme_color2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="85dp"/>
            <TextView
                android:id="@+id/idL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:textColor="#000"
        android:id="@+id/detllesLav"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio especial por docena. EntrÃ©gamos las doce piezas, las planchamos para que queden como te gusta y te las entregamos listas en su gancho y funda protectora."/>

</LinearLayout>