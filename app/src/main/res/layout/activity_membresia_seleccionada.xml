<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Membresias"
    android:background="#F3F4F6"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/designbarra"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cerrar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/union"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="32dp"
                    android:paddingLeft="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/limpi" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/cesto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icono_cesto"/>
            </RelativeLayout>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:id="@+id/imagen"/>
            <TextView
                android:id="@+id/plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="130dp"
                >
                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0075BE"
                    android:text=""
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_below="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen_detalle"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿En qué consiste?"
                android:textSize="25dp"
                android:textColor="#000"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿Qué incluye?"
                android:textSize="25dp"
                android:textColor="#000"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btn_pagar_membre"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/boton_plano"
                android:text="Suscribete"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                />
        </LinearLayout>



    </LinearLayout>





</ScrollView>