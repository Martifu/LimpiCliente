<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F4F6">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="8dp"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card"
        >
        <RelativeLayout

            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:maxWidth="180dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:maxHeight="60dp"
                android:text="Descripcion"
                android:id="@+id/desc"
                android:layout_below="@+id/tipo"
                android:layout_toRightOf="@+id/imagen"
                android:layout_toEndOf="@+id/imagen"
                android:layout_marginLeft="20dp"
                android:textColor="#000"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan S"
                android:id="@+id/tipo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imagen"
                android:layout_toEndOf="@+id/imagen" />



            <ImageView
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/imagen"
                android:cropToPadding="false"
                android:src="@drawable/plans"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:maxHeight="45dp"
                android:maxWidth="79dp"
                android:adjustViewBounds="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </FrameLayout>
            <TextView
                android:id="@+id/precio"
                android:tag="Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="$000"
                android:textSize="20dp"
                android:textColor="#0075BE"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensuales"
                android:layout_below="@id/precio"
                android:layout_marginLeft="295dp"
                android:textStyle="bold"
                android:textColor="#000"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
