<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:background="@drawable/planchado_detalle"
            android:id="@+id/imagen_pln"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            />
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tipoP"
              android:paddingLeft="10dp"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:text="Planchado"
              android:textStyle="bold"
              android:textColor="#000"
              android:textSize="15dp"/>
          <Button
              android:id="@+id/menos"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:background="@drawable/menos"
              android:layout_marginLeft="20dp"
              />

          <TextView
              android:id="@+id/cantidad"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              android:textColor="#0E0E0E"
              android:textStyle="bold"
              android:textSize="20dp"
              android:layout_marginLeft="15dp"/>

          <Button
              android:id="@+id/mas"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:background="@drawable/mas"
              android:layout_marginLeft="20dp"
              />

          <TextView
              android:id="@+id/precioP"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="$199"
              android:textColor="@color/theme_color2"
              android:textStyle="bold"
              android:textSize="20dp"
              android:layout_marginLeft="5dp"/>
          <Button
              android:id="@+id/infor"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:background="@drawable/info"
              android:layout_marginLeft="15dp"/>
      </LinearLayout>
    </LinearLayout>

</LinearLayout>